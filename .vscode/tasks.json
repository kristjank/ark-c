{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
   "version": "0.1.0",
    "linux": {
        "command": "bash",
        "args": ["-c"],
        "isShellCommand": true,
        "showOutput": "always",
        "suppressTaskName": true,
        "options": {
            "cwd": "${workspaceRoot}/src"
        },
        "tasks": [
            {
                "taskName": "arkmain",
                "args": [
                    "make arkmain"
                ],
                "isBuildCommand": true
            },
            {
                "taskName": "arktest",
                "args": [
                    "make arktest"
                ],
                "isBuildCommand": true
            },
            {
                "taskName": "clean",
                "args": [
                    "make clean"
                ]
            },
            {
                "taskName": "compile w/o makefile",
                "args": [
                    "clang++ -Wall -g helloworld.cpp -o helloworld"
                ],
                "echoCommand": true
            }
        ]
    }
}